{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "remix"
      }
    ],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "module": "CommonJS",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2019"
  }
}